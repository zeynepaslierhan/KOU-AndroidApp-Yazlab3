<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrtaLoadingScreenActivity"
    android:padding="16dp"
    android:background="@drawable/loadingbackground">

    <ProgressBar
        android:id="@+id/ortaprogress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="#474747" />
    
    <TextView
        android:visibility="gone"
        android:id="@+id/ortatextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 %"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ortaprogress_bar"
        android:textSize="0sp"
        android:textAlignment="center"
        />

</RelativeLayout>